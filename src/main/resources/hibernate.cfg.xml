    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://php.bdubruque.net:3306/abltx?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">abltx</property>
    <property name="hibernate.connection.password">abltx2016</property>
    <mapping class="bean.Stadium"/>
    <mapping class="bean.Team"/>
    <mapping class="bean.Event"/>
    <mapping class="bean.Bettor"/>
    <mapping class="bean.ScoreBet"/>
    <mapping class="bean.VictoryBet"/>
  </session-factory>
</hibernate-configuration>
